{
  "name": "react-portal-lite",
  "version": "1.0.0",
  "description": "",
  "main": "build/portal.js",
  "scripts": {
    "commit": "git-cz",
    "test": "jest",
    "watch:test": "npm run test -- --watch",
    "cover": "npm run test -- --coverage",
    "lint": "./node_modules/.bin/eslint lib/portal.js",
    "build": "mkdir -p build && babel ./lib/portal.js --output-file ./build/portal.js",
    "prepublish": "npm run build"
  },
  "keywords": [
    "react",
    "portal",
    "lite"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "react": "^15.4.1",
    "react-dom": "^15.4.1"
  },
  "devDependencies": {
    "babel-core": "^6.21.0",
    "babel-jest": "^18.0.0",
    "babel-loader": "^6.2.10",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "commitizen": "^2.9.3",
    "cz-conventional-changelog": "^1.2.0",
    "enzyme": "^2.7.0",
    "eslint": "^3.12.2",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.8.0",
    "ghooks": "^2.0.0",
    "jest": "^18.1.0",
    "react-addons-test-utils": "^15.4.1",
    "webpack": "^1.14.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "lib/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run lint && npm run cover"
    }
  }
}
